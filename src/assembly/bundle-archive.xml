<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>dist</id>

 	<includeBaseDirectory>false</includeBaseDirectory>
	<!--  baseDirectory>bundles</baseDirectory -->

	<formats>
		<format>tar.gz</format>
	</formats>

	<files>
		<file>
			<source>${project.build.directory}/${artifactId}-${version}-gae.${bundle.file.format}</source>
			<outputDirectory>post-10.5</outputDirectory>
			<destName>${artifactId}.${bundle.file.format}</destName>
		</file>
		
		<file>
			<source>${project.build.directory}/${artifactId}-${version}-wily.${bundle.file.format}</source>
			<outputDirectory>pre-10.5</outputDirectory>
			<destName>${artifactId}.pre-10.5.${bundle.file.format}</destName>
		</file>

		<file>
			<source>${project.build.sourceDirectory}/../managementModules/IdentityManagerMM.jar</source>
			<outputDirectory>copy-to-em/deploy</outputDirectory>
			<destName>IdentityManagerMM.jar</destName>
		</file>

		<file>
			<source>README.md</source>
		</file>
	</files>
	
	<fileSets>
		<fileSet>
			<includes>
				<include>LICENSE*</include>
				<include>NOTICE*</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>
